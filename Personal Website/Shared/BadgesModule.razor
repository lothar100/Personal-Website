
@if (string.IsNullOrWhiteSpace(Model.Badges) == false)
{
    <div class="badge-group">
        @foreach (var badgeInfo in Model.ParseBadges())
        {
            <span class="badge badge-pill badge-@badgeInfo.Style align-middle">@badgeInfo.Text</span>
        }
    </div>
}

@code {
    [Parameter]
    public PageModuleModel Model { get; set; }
}
